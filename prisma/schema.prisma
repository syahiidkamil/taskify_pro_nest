generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  PENDING
  COMPLETE
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  tasks     Task[]
  hashedRT  String?
}

model Task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  priority    Int?
  status      TaskStatus? @default(PENDING)
  dueDate     DateTime?
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
